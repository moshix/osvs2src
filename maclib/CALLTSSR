*          THEN                        /*   TRUE                     */ 14400002
*            EHAREGS = EHAREGS || '15P'; /*     THEN REQ REG 15      */ 15000002
*                                                                       15600002
*        IF INDEX(EHAREGS,'02P') = 0   /* REG 2 NOT USED YET         */ 16200002
*          THEN                        /*   TRUE                     */ 16800002
*            EHAREGS = EHAREGS || '02P'; /*     REQ REG 2            */ 17400002
*                                                                       18000002
*        IF INDEX(EHAREGS,'03P') = 0   /* REG 3 NOT USED YET         */ 18600002
